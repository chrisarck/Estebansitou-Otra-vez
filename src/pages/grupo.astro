---
import Creadores from "../components/creadores.astro"
---
<div class="center">
    <div class="image-slider">

        <img src="Grupo1.jpg" alt="Imagen1" >
        <img src="Grupo2.jpg" alt="Imagen2" >
        <img src="Grupo3.jpg" alt="Imagen3" >
        <img src="Grupo4.jpg" alt="Imagen4" >
    </div>
</div>
<Creadores/>

<style>
    .center{
        display: flex;
        align-items: center;
        justify-content: center;
        align-content: center;
    }
    .image-slider {
    position: relative;
    width: 1600px;  /* Ajusta al tamaño deseado */
    height: 1060px; /* Ajusta al tamaño deseado */
    overflow: hidden;
    border-radius: 20px;
}

.image-slider img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
    animation: fadeInOut 12s infinite;
    z-index: 500;
}

/* Animaciones específicas para cada imagen */
.image-slider img:nth-child(1) {
    animation-delay: 0s;
}
.image-slider img:nth-child(2) {
    animation-delay: 3s;
}
.image-slider img:nth-child(3) {
    animation-delay: 6s;
}
.image-slider img:nth-child(4) {
    animation-delay: 9s;
}

@keyframes fadeInOut {
    0%, 100% { opacity: 0; }
    25%, 75% { opacity: 1; }
}
</style>